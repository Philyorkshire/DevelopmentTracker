@using KanbanTracker.Classes
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Arimo|Oswald:300' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
    <body>
        @Html.Partial("Header")
        <div class="content-wrapper"><p class="info-message">@ViewBag.Info</p><h4>@Auth.Message</h4></div>

            @RenderBody()

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
            
        
    
        @Html.Partial("Footer")
    </body>
</html>
