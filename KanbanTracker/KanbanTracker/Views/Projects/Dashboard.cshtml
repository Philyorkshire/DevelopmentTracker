@using System.Collections
@using KanbanTracker.Classes
@using KanbanTracker.Models
@using MongoDB.Bson
@using MongoDB.Driver

@functions {
    public MongoCollection<Project> Open;
}

@{
    Open = ProjectDb.Open();
    var p = (Project) Open.FindOneById(ObjectId.Parse(@ViewBag.id));
    var s = p.Stories;
    var b = p.Bugs;


    var backlogCount = s.Count(i => i.Status == "backlog") + b.Count(i => i.Status == "backlog");
    var readyCount = s.Count(i => i.Status == "readytogo") + b.Count(i => i.Status == "readytogo");
    var developmentCount = s.Count(i => i.Status == "development") + b.Count(i => i.Status == "development");
    var codeCount = s.Count(i => i.Status == "codereview") + b.Count(i => i.Status == "codereview");
    var testingCount = s.Count(i => i.Status == "testing") + b.Count(i => i.Status == "testing");
    var completeCount = s.Count(i => i.Status == "complete") + b.Count(i => i.Status == "complete");
    var acceptedCount = s.Count(i => i.Status == "accepted") + b.Count(i => i.Status == "accepted");
    
    
}

<div class="content-wrapper">
    <h1>@p.Title</h1>
    <p>Description: @p.Description</p>
    <p>Creator: @KanbanTracker.Classes.User.GetUserFromId(@p.Owner)</p>
    <p>Due Date: @p.DueDate</p>
</div>

