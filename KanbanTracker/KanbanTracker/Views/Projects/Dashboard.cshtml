            <h4>(@backlogCount) Backlog</h4>
            @if ("54a4d1d0d7aa0b1ae48da9f4" == KanbanTracker.Classes.User.CurrentUser.Id)
            {
                foreach (var story in s)
                {
                    if (story.Status == "backlog")
                    {
                        <div class="cards">
                            <div class="card">
                                <div class="story">Story</div>
                                <a class="elementTitle" href="/projects/story_edit/@p.Id?storyId=@story.Id"><h5>@story.Title</h5></a>
                                <p class="describe">@story.Description</p>
                                <div class="assigned">@KanbanTracker.Classes.User.GetUserFromId(@story.Assigned)</div>
                            </div>
